{
    "version": "1.5.0-alpha",
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "declaration": true,
        "noImplicitAny": true,
        "noEmitOnError": true,
        "removeComments": false,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "outDir": "../output",
        "rootDir": "../"
    },
    "filesGlob": [
        "./**/*.ts",
        "!./node_modules/**/*.ts"
    ],
    "files": [
        "./Balloon.ts",
        "./BalloonSurface.ts",
        "./BlobWorker.ts",
        "./Menu.ts",
        "./PNG.ts",
        "./PNGReader.ts",
        "./Scope.ts",
        "./Shell.ts",
        "./Surface.ts",
        "./SurfaceRender.ts",
        "./SurfaceUtil.ts"
    ]
}
